#include <Servo.h>

Servo servo1;
Servo servo2;
Servo servo3;
void setup() {

  servo1.attach(8);//left
  servo2.attach(9);
  servo3.attach(10);//second joint
  
}

void loop() {
/*
  servo1.write(90);
  servo2.write(90);
  servo3.write(90);


*/
  for(int angle = 0; angle<=180;angle++){
    servo1.write(angle);
   // int comangle = 180-angle;
    servo3.write(angle);
    int angle2 = 180-angle;
    servo2.write(angle2);
    delay(5);
    if(angle==90){
      delay(2000);
    }
    if(angle==0){
      delay(1000);
    }
    if(angle==180){
      delay(1000);
    }
    //delay(100);
  }

  for(int angle = 180; angle>=0;angle--){
    servo1.write(angle);
   // int comangle = 180-angle;
    servo3.write(angle);
    int angle2 = 180-angle;
    servo2.write(angle2);
    delay(5);
    if(angle==90){
      delay(2000);
    }
    if(angle==0){
      delay(1000);
    }
    if(angle==180){
      delay(1000);
    }
    //delay(100);
  }
  /*
  for(int angle2 = 0;angle2<=75;angle2++){
    servo2.write(angle2);
    delay(10);
  }
 */
}
